client.focused_inactive #A5A5A5 #A5A5A5 #E9E9E9 #000000
client.unfocused        #A5A5A5 #A5A5A5 #E9E9E9 #000000
client.urgent           #C82829 #D54E53 #FFFFFF #000000
client.placeholder      #000000 #8E908C #FFFFFF #000000
client.background       #E9E9E9
